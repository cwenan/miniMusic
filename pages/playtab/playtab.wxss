/* pages/play/play.wxss */
.playContainer {
    height: 100vh;
    width: 100%;
    background: #bdc3c7;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to right, #2c3e50, #bdc3c7);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #2c3e50, #bdc3c7); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    display: flex;
    flex-direction: column;
    align-items: center;
}

.discContainer {
    position: relative;
    top: 150rpx;
    width: 598rpx;
    height: 598rpx;
}

/* 设置动画 */
.discAnimation {
    animation: disc 10s linear infinite;
}
 @keyframes disc {
    from {
        transform: rotate(0deg);
    } to{
        transform: rotate(360deg);
    }
 }

.disc{
    width: 598rpx;
    height: 598rpx;
}
.musicImg {
    width: 370rpx;
    height: 370rpx;
    border-radius: 50%;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
}

/* 进度条 */
.progressControl{
    position: absolute;
    bottom: 200rpx;
    width: 640rpx;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}
/* 背景进度条 */
.progressLine{
    position: relative;
    width: 450rpx;
    height: 4rpx;
    background-color: rgba(0 , 0, 0, 0.4);
    margin: auto;
}
/* 实时进度条 */
.currentTimeLine{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    height: 4rpx;
    background: white;
}
/* 圆球 */
.audioCircle{
    position: absolute;
    right: -12rpx;
    top: -4rpx;
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background-color: #fff;
}


/* 底部控制 */
.musicControl{
    width: 100%;
    position: absolute;
    bottom: 40rpx;
    display: flex;
}
.musicControl text{
    width: 20%;
    line-height: 120rpx;
    height: 120rpx;
    text-align: center;
    font-size: 55rpx;
}
.musicControl .big{
    font-size: 80rpx;
}

/* 歌词样式 */
.lyric-wrapper {
    width: 100%;
    height: 850rpx;
    
}
.lyric-wrapper text{
    display: block;
    text-align: center;
    height: 70rpx;
    line-height: 70rpx;
}
.activeLyric{
    color: white;
}

/* 隐藏滚动条 */
::-webkit-scrollbar { 
    width: 0; 
    height: 0; 
    color: transparent; 
}
