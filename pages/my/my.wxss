/* pages/home/home.wxss */
/* 设置背景图片 */

.info image{
    width: 100%;
    height: 500rpx;
    border-radius: 0 0 20rpx 20rpx;
}
.userInfo{
    padding: 20rpx 40rpx;
    display: flex;
}
.userInfo image{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}
.infoList{
    padding-left: 80rpx;
    height: 00rpx;
    line-height: 100rpx;
    display: flex;
    flex-direction: column;
}
.follow_lv{
    height: 30rpx;
    line-height: 30rpx;
    display: flex;
    justify-content: center;
}
.follow_lv .a{
    display: flex;
    flex-direction: column;
    padding: 0 30rpx
}
.edit {
    width: 300rpx;
    padding-top: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
}
.edit text{
    width: 100%;
    height: 50rpx;
    font-size: 35rpx;
    border-radius: 10rpx;
    border: rgb(173, 172, 172) solid 1rpx;
}

.baseInfo {
    padding: 20rpx;
    width: 100%;
    height: 800rpx;
    border:  rgba(255, 255, 255, 1) solid 1rpx;
    border-radius: 30rpx;
    /* background-color: rgba(255, 255, 255, 1); */
}
.baseInfo .title {
    font-size: 40rpx;
}
.baseInfoItem {
    display: flex;
    flex-direction: column;
}
.baseInfoItem .item {
    margin-bottom: 30rpx;
    border-bottom: rgba(246, 246, 246, 1) solid 1rpx;
}
