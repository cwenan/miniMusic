/* 一首歌 */
.scrollItem{
    display: flex;
    position: relative;
    margin-bottom: 20rpx;
}
.listInfo{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;

}
.listInfo text{
    height: 40rpx;
    line-height: 40rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.listInfo .musicName{
    font-size: 32rpx;
    font-weight: 500;
}

.scrollItem .cuIcon-moreandroid{
    position: absolute;
    line-height: 80rpx;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    right: 0;
    border-radius: 10rpx;
}

.scrollItem .cuIcon-video{
    position: absolute;
    line-height: 80rpx;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    right: 100rpx;
}

/* 设置序号垂直对齐 */
.number{
    height: 80rpx;
    line-height: 80rpx;
}
.singerInfo{
    flood-color: rgb(223, 223, 223);
    font-weight: light;
}