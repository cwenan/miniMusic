.container{
    padding: 0 20rpx;
}
.header {
    display: flex;
    flex-direction: row;
}
.header .cuIcon-search {
    height: 100rpx;
    width: 50rpx;
    line-height: 100rpx;
    font-size: 40rpx;
    position: absolute;
    right: 20rpx;
}
/* 头像昵称 */
.userinfo{
    display: flex;
    width: 100%;
    height: 120rpx;
}
.userinfo image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}
.userinfo .nickname{
    padding-left: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-weight: bold;
}
.userinfo .cuIcon-right{
    font-size: 35rpx;
    color: gray;
    height: 100rpx;
    line-height: 100rpx;
    position: absolute;
    right: 20rpx;
    /* padding-left: 600rpx; */
}

