/* pages/dayrecommend/dayrecommend.wxss */
/* 头部信息 */
.dayRecommend .header{
    width: 100%;
    height: 300rpx;
    position: relative;
    background: #c0c0aa;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to right, #1cefff, #c0c0aa);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #1cefff, #c0c0aa); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    
}

.dayRecommend .header image {
    width: 100%;
    height: 100%;
}

.dayRecommend .header .date {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -150rpx;
    margin-top: -50rpx;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: rgb(44, 29, 29);
    font-size: 40rpx;
}

/* 列表 */
/* 列表头部 */
.listContainer {
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background-color: rgba(255, 255, 255, 1);
}
.listHeader {
    height: 80rpx;
    line-height: 80rpx;
}
.listHeader .cuIcon-videofill {
    padding-right: 20rpx;
}
.listHeader .chooseMore {
    float: right;
}

.listScroll {
    height:calc(100vh-380rpx);
}

/* 列表区内容 */
.scrollItem{
    display: flex;
    position: relative;
    margin-bottom: 20rpx;
}
.scrollItem  image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}
.listInfo{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;

}
.listInfo text{
    height: 40rpx;
    line-height: 40rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.listInfo .musicName{
    font-size: 32rpx;
    font-weight: 500;
}

.scrollItem .cuIcon-moreandroid{
    position: absolute;
    line-height: 80rpx;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    right: 0;
    border-radius: 10rpx;
}

.scrollItem .cuIcon-video{
    position: absolute;
    line-height: 80rpx;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    right: 100rpx;
}
