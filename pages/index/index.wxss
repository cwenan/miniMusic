/* 首页导航栏样式 */
.nav-box {
  display: flex;
  padding: 0 0 25rpx 0;
}
.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  background-color:rgba(208, 92, 104, 1);
  color: #fff;
}

/* 搜索框和侧边栏 */
.searchSider{
  display: flex;
}
/* 搜索框 */
.search{
  margin-left: 25rpx;
  width: 620rpx;
  height: 80rpx;
}
/* 搜索框样式 */
.search-form{
  border: rgb(184, 179, 179) solid 0.01rpx;
  color: gainsboro
}

/*歌单推荐*/
.recommendContainer {
  padding: 17rpx 25rpx;
  border-top: 1rpx solid #E0E3DA;
}
.recommendContainer .header .title{
  font-size: 32rpx;
  font-weight: bold;
}
.recommendContainer .header .more {
  padding: 2.5rpx 15rpx;
  float: right;
  border: 0.5rpx solid rgb(175, 168, 168);
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

/*歌单列表*/
.menu-scroll {
  display: flex;
  height: 300rpx;
}
.scroll-item{
  width: 200rpx;
  margin-right: 20rpx;
}
.scroll-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scroll-item text{
  /*单行文本溢出隐藏，使用省略号代替*/
  /*作用于块级元素*/
  /*display: block;*/
  /*white-space: nowrap;*/
  /*overflow: hidden;*/
  /*text-overflow: ellipsis;*/

/*  多行文本溢出*/
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
}

/* 排行榜 */
.topList{
  padding: 20rpx;
}

.topListSwiper {
  height: 450rpx;
}
.topListSwiper-item {
  width: 95%;
}
.topListSwiper-item .list-title {
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
}

.musicList-item {
  display: flex;
  margin-bottom: 20rpx;
}

.musicList-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.musicList-item .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicList-item .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

