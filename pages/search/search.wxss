/* pages/search/search.wxss */
/* 搜索框样式 */
.box {  
    margin: 20rpx 0; 
  }
.box view.cu-bar {
    margin-top: 20rpx; 
  }
/* 删除符号 */
.iconfont{
    padding-right: 15rpx;
    font-size: 40rpx;
    color: gray;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
}

/* 热搜榜 */
.hot{
    padding: 20rpx;
}
.hotlist{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    width: 100%;
    height: 750rpx;
    border: white solid 1rpx;
    border-radius: 5%;
    background-color: white;
}
.hotItem{
    width: 50%;
}
.hotItem .num{
    padding: 0 40rpx;
}
.hottitle{
    color: gray;
    font-weight: bold;
}


/* 搜索显示内容 */
.showSearchContent{
    padding: 5rpx 20rpx;
}
.searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}
.searchItem .content {
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
    border-bottom: rgb(240, 173, 173) solid 1rpx;
  }
  