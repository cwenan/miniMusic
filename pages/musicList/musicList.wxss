/* pages/musicList/musicList.wxss */
/* 头部 */
.musicListHeader{
    position: relative;
    padding-top: 40rpx;
    padding-left: 20rpx;
    width: 100%;
    height: 350rpx;
    background-color: rgb(117, 115, 115);
}
.musicListDetails{
    display: flex;
}
.musicListInfo{
    padding: 20rpx;
    display: flex;
    flex-direction: column;
}
.musicListInfo text{
    height: 40rpx;
    line-height: 40rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.text01{
    color: whitesmoke;
}
.musicListHeader image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}
.ListCount{
    position: absolute;
    left: 75rpx;
    top: 270rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: 30rpx 30rpx 10rpx 10rpx;
    width: 600rpx;
    height: 80rpx;
    background-color: rgba(255, 255, 255, 1);
}
.ListCount text{
    padding: 0 30rpx ;
    border-right: black;
    text-align: center;
}

/* 列表 */
.listContainer {
    position: relative;
    top: -10rpx;
    padding: 0 10rpx;
    border-radius: 30rpx;
    background-color: rgba(255, 255, 255, 1);
}

.listScroll {
    height:calc(100vh-400rpx);
}


/* 列表 */
/* 列表头部 */
.listContainer {
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: #fff;
}
.listHeader {
    height: 80rpx;
    line-height: 80rpx;
}
.listHeader .cuIcon-videofill {
    padding-right: 20rpx;
}
.listHeader .chooseMore {
    float: right;
}


/* 播放页面 */
/* 头部控制条 */
.listContainer {
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: #fff;
}
.listHeader{
    height: 80rpx;
    line-height: 80rpx;
}
.listHeader .cuIcon-videofill {
    padding-right: 20rpx;
}
.listHeader .chooseMore {
    float: right;
}

/* 一首歌 */
.scrollItem{
    display: flex;
    position: relative;
    margin-bottom: 20rpx;
}
.listInfo{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;

}
.listInfo text{
    height: 40rpx;
    line-height: 40rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.listInfo .musicName{
    font-size: 32rpx;
    font-weight: 500;
}

.scrollItem .cuIcon-moreandroid{
    position: absolute;
    line-height: 80rpx;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    right: 0;
    border-radius: 10rpx;
}

.scrollItem .cuIcon-video{
    position: absolute;
    line-height: 80rpx;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    right: 100rpx;
}

/* 设置序号垂直对齐 */
.number{
    height: 80rpx;
    line-height: 80rpx;
}
.singerInfo{
    flood-color: rgb(223, 223, 223);
    font-weight: light;
}